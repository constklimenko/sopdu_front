section.lk

    aside.lk__aside
        ._alert Продлить подписку на «За&nbsp;рулем»
        ._container
            a(onclick="LkOffAll();LkActivateThis(this);ToggleBlockActual('on', '.lk__profile', 'hide')")._link
                ._icon.-User
                ._text Профиль
            a(onclick="LkOffAll();LkActivateThis(this);ToggleBlockActual('on', '.lk__pass_change', 'hide')")._link
                ._icon.-Key
                ._text Сменить пароль
            a(onclick="LkOffAll();LkActivateThis(this);ToggleBlockActual('on', '.lk__history', 'hide')")._link
                ._icon.-BookOpen
                ._text История подписки
            a(onclick="LkOffAll();LkActivateThis(this);ToggleBlockActual('on', '.lk__mail', 'hide')")._link.-active
                ._icon.-Cap
                ._text Написать издательству
            a(style="background-color:white;")._link.m-show
        
    .lk__right
        ._container
            include lk_profile.pug
            include lk_pass_change.pug
            include lk_history.pug
            include lk_mail.pug
    
